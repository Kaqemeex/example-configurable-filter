{
  "type": "module",
  "name": "Equipment Items",
  "inputs": [
    {
      "type": "enumlist",
      "description": "Select which equipment slots to filter",
      "macroName": "EQUIPMENT_SLOTS",
      "label": "Equipment Slots",
      "group": "Equipment Settings",
      "enum": [
        "weapon",
        "shield",
        "head",
        "body",
        "legs",
        "boots",
        "gloves",
        "cape",
        "ring",
        "amulet"
      ],
      "defaults": ["weapon", "body", "legs"]
    },
    {
      "type": "boolean",
      "description": "Show equipment stats on hover",
      "macroName": "SHOW_STATS",
      "label": "Show Equipment Stats",
      "group": "Display Options",
      "defaults": true
    },
    {
      "type": "stringlist",
      "description": "List of rare equipment names to highlight",
      "macroName": "RARE_EQUIPMENT",
      "label": "Rare Equipment Names",
      "group": "Highlights",
      "defaults": [
        "Dragon",
        "Bandos",
        "Armadyl",
        "Zamorak"
      ]
    }
  ]
} 